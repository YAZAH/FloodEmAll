            android:textStyle="bold"/>


    </RelativeLayout>

    <Button
        android:id="@+id/returnToM"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="@string/menu"
        android:layout_below="@+id/Title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:background="@drawable/btnmenu"/>

    <Button
        android:id="@+id/small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/S"
        android:layout_centerHorizontal="true"
        android:text="@string/_10_x_10"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:background="@drawable/btnmenu1"/>

    <Button
        android:id="@+id/medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/M"
        android:layout_centerHorizontal="true"
        android:text="@string/_20_x_20"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:background="@drawable/btnmenu1"/>

    <Button
        android:id="@+id/large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/L"
        android:layout_centerHorizontal="true"
        android:text="@string/_40_x_40"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:background="@drawable/btnmenu1"/>

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif"
        android:text="@string/flood_em_all"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="70sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:fontFamily="casual"
        android:text="@string/please_choose_your_board"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#FFF"
        />

    <TextView
        android:id="@+id/S"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Choice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/small"
        android:textColor="@android:color/darker_gray"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/M"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/small"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/medium"
        android:textColor="@android:color/darker_gray"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/L"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medium"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/large"
        android:textColor="@android:color/darker_gray"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/modeSelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/mode_selection"
        android:textSize="40sp"
        android:layout_below="@+id/large"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="#FFF"/>

    <RadioGroup
        android:id="@+id/mode1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/modeSelection"
        >

        <RadioButton
            android:id="@+id/OrthoPlane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/orthoplane"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

        <RadioButton
            android:id="@+id/OrthoTorus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/orthotorus"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

        <RadioButton
            android:id="@+id/DiagoPlane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/diagoplane"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

        <RadioButton
            android:id="@+id/DiagoTorus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/diagotorus"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

    </RadioGroup>


</RelativeLayout>