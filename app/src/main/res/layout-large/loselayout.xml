<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/backgroundmenu">

    <TextView
        android:id="@+id/textcong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/youlost"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textColor="#FFF"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/realretry"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/retry"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="30sp"
        android:background="@drawable/btn"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textcong"
        />

    <Button
        android:id="@+id/showad"
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:text="@string/showad"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@drawable/btn"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/realretry"
        />

    <Button
        android:id="@+id/retry"
        android:layout_width="240dp"
        android:layout_height="100dp"
        android:text="@string/level_selection"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="30sp"
        android:background="@drawable/btn"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/showad"
        android:layout_marginBottom="30dp"
        />

</RelativeLayout>