<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/back">

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="@string/flood_em_all"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textSize="100sp"
        android:textStyle="bold"
        android:textColor="@android:color/background_dark"/>

    <TextView
        android:id="@+id/Choice"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Title"
        android:layout_centerHorizontal="true"
        android:text="@string/hey"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/newGame"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:layout_below="@+id/Choice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn1"
        android:text="@string/random_game"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp" />

    <Button
        android:id="@+id/levelChoice"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:layout_below="@+id/newGame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn6"
        android:text="@string/level_game"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp" />

    <Button
        android:id="@+id/instructions"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:layout_below="@+id/levelChoice"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="10dp"
        android:background="@drawable/btn2"
        android:text="@string/instruc"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp" />

    <Button
        android:id="@+id/discover"
        android:layout_width="400sp"
        android:layout_height="80dp"
        android:layout_below="@+id/instructions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:background="@drawable/btn2"
        android:text="@string/discover"
        android:textSize="34sp"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/rate"
        android:layout_width="400sp"
        android:layout_height="80dp"
        android:layout_below="@+id/discover"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:background="@drawable/btn2"
        android:text="@string/rate"
        android:textSize="34sp"
        android:textColor="@color/colorPrimaryDark" />


    <Button
        android:id="@+id/QuitB"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn5"
        android:text="@string/quit"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp" />

</RelativeLayout>