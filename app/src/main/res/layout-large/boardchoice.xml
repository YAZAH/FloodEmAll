            android:textColor="@android:color/darker_gray"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_below="@+id/best2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/M21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/S21"
            android:paddingTop="80dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/L21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/M21"
            android:paddingTop="80dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="30sp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout33"
        android:visibility="gone"
        android:layout_width="400dp"
        android:layout_height="350dp"
        android:layout_alignRight="@id/Choice"
        android:layout_alignEnd="@id/Choice"
        android:layout_below="@id/Choice">

        <TextView
            android:id="@+id/best3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:text="@string/best"
            android:textColor="@android:color/darker_gray"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/S31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_below="@+id/best3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/M31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/S31"
            android:paddingTop="80dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/L31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/M31"
            android:paddingTop="80dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="30sp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout44"
        android:visibility="gone"
        android:layout_width="400dp"
        android:layout_height="350dp"
        android:layout_alignRight="@id/Choice"
        android:layout_alignEnd="@id/Choice"
        android:layout_below="@id/Choice">

        <TextView
            android:id="@+id/best4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:text="@string/best"
            android:textColor="@android:color/darker_gray"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/S41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_below="@+id/best4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/M41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
